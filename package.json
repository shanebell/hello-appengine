{
  "name": "hello-appengine",
  "version": "1.0.0",
  "description": "NodeJS application to run on Google App Engine",
  "main": "src/index.js",
  "scripts": {
    "start": "node .",
    "dev": "nodemon",
    "format": "prettier --write 'src/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shanebell/hello-appengine.git"
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ignore": [
      "node_modules",
      "package-lock.json",
      "src/**/*.test.*",
      "src/**/*.itest.*"
    ],
    "exec": "GOOGLE_APPLICATION_CREDENTIALS=./credentials.json node ."
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "@google-cloud/bigquery": "4.7.0",
    "@google-cloud/firestore": "4.0.0",
    "@google-cloud/logging-bunyan": "2.0.3",
    "@google-cloud/tasks": "1.9.0",
    "body-parser": "1.19.0",
    "bunyan": "1.8.14",
    "ejs": "3.1.3",
    "express": "4.17.1",
    "lodash": "4.17.15",
    "luxon": "1.24.1"
  },
  "devDependencies": {
    "nodemon": "2.0.4",
    "prettier": "2.0.5"
  }
}
